<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN" 
     "http://castor.org/mapping.dtd">
<mapping>
	<description>
		Spring OXM and Castor
	</description>
	<class name="com.vbj.rb.transactions.RB.Transaction.RS.model.Transactions">
		<map-to xml="records" />
		<field name="trans" collection="arraylist"
			type="com.vbj.rb.transactions.RB.Transaction.RS.model.Transaction"
			>
			<bind-xml name="record" node="element"/>
		</field>
	</class>
	<class name="com.vbj.rb.transactions.RB.Transaction.RS.model.Transaction" >
		<map-to xml="record" />
		<field name="reference" type="java.lang.String">
			<bind-xml name="reference" node="attribute" />
		</field>
		<field name="accountNumber" type="java.lang.String">
			<bind-xml name="accountNumber" node="element"/>
		</field>
		<field name="description" type="java.lang.String">
			<bind-xml name="description" node="element" />
		</field>
		<field name="startBalance" type="java.lang.String">
			<bind-xml name="startBalance" node="element" />
		</field>
		<field name="mutation" type="java.lang.String">
			<bind-xml name="mutation" node="element" />
		</field>
		<field name="endingBalance" type="java.lang.String">
			<bind-xml name="endBalance" node="element" />
		</field>
	</class>
</mapping>